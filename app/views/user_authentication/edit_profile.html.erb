<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_user.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_user.last_name %>">
      </div>
      <div>
        <label for="bookmarks_count_box">Bookmarks count</label>
        <input id="bookmarks_count_box" name="query_bookmarks_count" value="<%= @current_user.bookmarks_count %>">
      </div>
      <div>
        <label for="contacts_count_box">Contacts count</label>
        <input id="contacts_count_box" name="query_contacts_count" value="<%= @current_user.contacts_count %>">
      </div>
      <div>
        <label for="communications_count_box">Communications count</label>
        <input id="communications_count_box" name="query_communications_count" value="<%= @current_user.communications_count %>">
      </div>
      <div>
        <label for="jobs_count_box">Jobs count</label>
        <input id="jobs_count_box" name="query_jobs_count" value="<%= @current_user.jobs_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
