<div>
  <div>
    <h1>
      List of all employees
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new employee
    </h2>

    <form action="/insert_employee" method="post">
      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <input type="text" id="notes_box" name="query_notes">
      </div>

      <div>
        <input type="checkbox" id="alumni_box" name="query_alumni" value="1">

        <label for="alumni_box">Alumni</label>
      </div>

      <div>
        <label for="linkedin_box">
          Linkedin
        </label>

        <input type="text" id="linkedin_box" name="query_linkedin">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="connections_count_box">
          Connections count
        </label>

        <input type="text" id="connections_count_box" name="query_connections_count">
      </div>

      <button>
        Create employee
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Firm
        </th>

        <th>
          Role
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Notes
        </th>

        <th>
          Alumni
        </th>

        <th>
          Linkedin
        </th>

        <th>
          Email
        </th>

        <th>
          Connections count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_employees.each do |an_employee| %>
      <tr>
        <td>
          <%= an_employee.id %>
        </td>

        <td>
          <%= an_employee.firm_id %>
        </td>

        <td>
          <%= an_employee.role %>
        </td>

        <td>
          <%= an_employee.first_name %>
        </td>

        <td>
          <%= an_employee.last_name %>
        </td>

        <td>
          <%= an_employee.notes %>
        </td>

        <td>
          <%= an_employee.alumni %>
        </td>

        <td>
          <%= an_employee.linkedin %>
        </td>

        <td>
          <%= an_employee.email %>
        </td>

        <td>
          <%= an_employee.connections_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_employee.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_employee.updated_at) %> ago
        </td>

        <td>
          <a href="/employees/<%= an_employee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
