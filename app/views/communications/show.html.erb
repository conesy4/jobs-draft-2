<div>
  <div>
    <h1>
      Communication #<%= @the_communication.id %> details
    </h1>

    <div>
      <div>
        <a href="/communications">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_communication/<%= @the_communication.id %>">
          Delete communication
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Contact
      </dt>
      <dd>
        <%= @the_communication.contact_id %>
      </dd>

      <dt>
        Job
      </dt>
      <dd>
        <%= @the_communication.job_id %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @the_communication.date %>
      </dd>

      <dt>
        Comm type
      </dt>
      <dd>
        <%= @the_communication.comm_type %>
      </dd>

      <dt>
        Outgoing
      </dt>
      <dd>
        <%= @the_communication.outgoing %>
      </dd>

      <dt>
        Incoming
      </dt>
      <dd>
        <%= @the_communication.incoming %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_communication.notes %>
      </dd>

      <dt>
        Followup date
      </dt>
      <dd>
        <%= @the_communication.followup_date %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_communication.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_communication.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_communication.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit communication
    </h2>

    <form action="/modify_communication/<%= @the_communication.id %>"  method="post" >
      <div>
        <label for="contact_id_box">
          Contact
        </label>

        <input type="text" id="contact_id_box" name="query_contact_id" value="<%= @the_communication.contact_id %>">
      </div>

      <div>
        <label for="job_id_box">
          Job
        </label>

        <input type="text" id="job_id_box" name="query_job_id" value="<%= @the_communication.job_id %>">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date" value="<%= @the_communication.date %>">
      </div>

      <div>
        <label for="comm_type_box">
          Comm type
        </label>

        <input type="text" id="comm_type_box" name="query_comm_type" value="<%= @the_communication.comm_type %>">
      </div>

      <div>
        <input type="checkbox" id="outgoing_box" name="query_outgoing" value="1" <%= "checked" if @the_communication.outgoing %>>

        <label for="outgoing_box">
            Outgoing
        </label>
      </div>

      <div>
        <input type="checkbox" id="incoming_box" name="query_incoming" value="1" <%= "checked" if @the_communication.incoming %>>

        <label for="incoming_box">
            Incoming
        </label>
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <input type="text" id="notes_box" name="query_notes" value="<%= @the_communication.notes %>">
      </div>

      <div>
        <label for="followup_date_box">
          Followup date
        </label>

        <input type="date" id="followup_date_box" name="query_followup_date" value="<%= @the_communication.followup_date %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_communication.user_id %>">
      </div>

      <button>
        Update communication
      </button>
    </form>
  </div>
</div>

<hr>
